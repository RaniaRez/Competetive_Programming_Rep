class Solution:
    def minProcessingTime(self, processorTime: List[int], tasks: List[int]) -> int:
        processorTime.sort()
        tasks.sort(reverse=True)
        min_time=float('-inf')
        
        for i in range(len(processorTime)):
            time_i = max([time + processorTime[i] for time in tasks[4*i:4*i+4]])
            if time_i>min_time:
                min_time=time_i
        return min_time
